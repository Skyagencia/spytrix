  <title>SpyTrix IA - An√°lise Final</title>
  <link rel="stylesheet" href="/css/ia-style.css" />
  <style>
    #pix-container {
      display: none;
      text-align: center;
      margin-top: 3rem;
    }

    #pix-container button {
      padding: 1rem 2rem;
      font-size: 1.2rem;
      background-color: #00ffc3;
      color: black;
      border: none;
      border-radius: 8px;
      cursor: pointer;
      box-shadow: 0 0 10px #00ffc3;
    }

    #janela-pix {
      display: none;
      width: 100%;
      height: 600px;
      margin-top: 20px;
    }

    #janela-pix iframe {
      width: 100%;
      height: 100%;
      border: none;
    }

    .chat-container {
      max-width: 800px;
      margin: 0 auto;
      padding: 2rem;
    }

    .chat-box {
      background: black;
      color: #00ffc3;
      border: 2px solid #00ffc3;
      padding: 2rem;
      border-radius: 10px;
      box-shadow: 0 0 20px #00ffc3;
      min-height: 300px;
      font-family: monospace;
    }

    .chat-msg {
      margin-bottom: 1rem;
      animation: fadeIn 0.4s ease-in-out;
    }

    @keyframes fadeIn {
      from {
        opacity: 0;
        transform: translateY(10px);
      }
      to {
        opacity: 1;
        transform: translateY(0);
      }
    }

    .chat-options, .chat-input {
      margin-top: 20px;
      display: flex;
      flex-direction: column;
      gap: 10px;
    }

    .chat-input input {
      padding: 1rem;
      font-size: 1rem;
      border: 2px solid #00ffc3;
      border-radius: 5px;
      background: #111;
      color: #00ffc3;
    }

    .chat-input button {
      padding: 1rem;
      background: #00ffc3;
      color: black;
      font-weight: bold;
      border: none;
      border-radius: 5px;
      cursor: pointer;
    }

    /* Estilo do Popup */
    #popup {
      display: none;
      position: fixed;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      background: rgba(0, 0, 0, 0.7);
      justify-content: center;
      align-items: center;
      color: white;
      font-size: 1.5rem;
      text-align: center;
    }

    #popup p {
      margin: 20px 0;
    }

    #popup button {
      padding: 1rem 2rem;
      background: #00ffc3;
      color: black;
      font-weight: bold;
      border: none;
      border-radius: 5px;
      cursor: pointer;
    }
  </style>
</head>
<body>
